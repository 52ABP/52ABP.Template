{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@abp/*": ["../node_modules/abp-ng2-module/dist/src/*"],
      "@appshared/*": ["app/shared/*"],
      "@testing": ["testing"],
      "@testing/*": ["testing/*"],
      "@env": ["environments"],
      "@env/*": ["environments/*"],
      "@shared/*": ["shared/*"],
      "@app/*": ["./app/*"],
      "@layout/*": ["./layout/*"]
    },
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  }
}
